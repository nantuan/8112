name: kirim-kirim
on:
  push:
    branches: [ "main" ]
  schedule:
    - cron: '*/5 * * * *'
  workflow_dispatch:
jobs:
  UpdateSub:
    runs-on: ubuntu-latest

    steps:
      - name: Check The Code
        uses: actions/checkout@v2
      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.10'
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          python -m pip install python-telegram-bot==13.15 requests
      - name: Get Files
        run: |
          curl -o aktif1.txt -LJO https://5412.us.to/api/v1/sub?limit=10
          curl -o aktif2.txt -LJO https://winter.lovolyxa.workers.dev/api/v1/sub?limit=10
          curl -o aktif3.txt -LJO https://vpn.ex03.workers.dev/api/v1/sub?limit=10
          curl -o aktif4.txt -LJO https://nautica.krikkrik.tech/api/v1/sub
          curl -o aktif5.txt -LJO https://nautica.zerostore.tech/api/v1/sub
          curl -o aktif6.txt -LJO https://herokumail.eu.org/api/v1/sub?vpn=vless,trojan&cc=SG,ID,MY,AU&port=443

      - name: send to telegram
        run: |
          python3 kirim.py ${{ secrets.BOT }} -1002292042831 aktif1.txt 
